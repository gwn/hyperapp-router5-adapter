{
    "env": {
        "commonjs": "true"
    },
    "parserOptions": {
        "ecmaVersion": 5
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [2, 4],
        "max-len": [2, 80],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "never"],
        "comma-dangle": [2, "always-multiline"]
    }
}
